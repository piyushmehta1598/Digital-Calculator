        <script>
            function num(value)
            {
        document.getElementById("txt").value+=value;
           }  
           function eva()
           {
            document.getElementById("txt").value=eval(document.getElementById("txt").value);
           }
           function ac()
           {
            document.getElementById("txt").value="";
           }
           function cl()
           {
           let dig=document.getElementById("txt").value;
           dig=dig.substr(0,dig.length-1);
           document.getElementById("txt").value=dig;
           }
         

        </script>
